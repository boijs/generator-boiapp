body {
  margin: 0;
}

.nav {
  background: #e7e7e7;
}

.nav__list {
  height: 50px;
  line-height: 50px;
  border-bottom: solid #ddd 1px;
  box-sizing: border-box;
  padding: 0 10px;
  margin: 0;
}

.nav__item {
  display: inline-block;
  font-size: 14px;
  position: relative;
  padding-left: 20px;
  margin-left: 20px;
}

.icon {
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.icon__home {
  background: url(../assets/icons/icon-home.png) no-repeat;
}
.icon__about {
  background: url(../assets/icons/icon-about.png) no-repeat;
}
.actions {
  margin: 50px 0;
  text-align: center;
}

.action__item {
  height: 50px;
  width: 120px;
  margin: 10px 20px;
  display: inline-block;
  vertical-align: middle;
  border: #ccc solid 1px;
}